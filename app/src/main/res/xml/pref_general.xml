<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBoxPreference
        android:key="auto_take_pic_checkbox"
        android:title="@string/pref_title_auto_take_enable"
        android:summary="@string/pref_description_auto_take_pic"
        android:defaultValue="true" />

    <!-- NOTE: EditTextPreference accepts EditText attributes. -->
    <!-- NOTE: EditTextPreference's summary should be set to its value by the activity code. -->
    <EditTextPreference
        android:key="time_interval"
        android:title="@string/pref_title_auto_take_pic_time_interval"
        android:defaultValue="@string/pref_default_time"
        android:selectAllOnFocus="true"
        android:inputType="textCapWords"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

</PreferenceScreen>
